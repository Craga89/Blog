{{!< default}}

{{! Include site-cover partial }}
{{> site-cover}}

<div class="site-content container">

	{{#post}}

		<article class="{{post_class}}">
			<header class="post-header">
				<h1 class="post-title">{{{title}}}</h1>
				<time class="post-time lined-block" datetime="{{date format='YYYY-MM-DD'}}"><span><i class="fa fa-clock-o"></i>{{date format="DD MMM YYYY"}}</span></time>
			</header>
			<div class="post-content">
				{{content}}
			</div>
			<footer class="post-meta">

				{{! Post author info. Hover for "info-card" }}
				<div class="post-author">
					<p><i class="fa fa-user"></i> {{author.name}}</p>
					<div class="author-info">
						<img src="{{author.image}}" alt="{{author.name}}" title="{{author.name}}">
						<p><i class="fa fa-envelope"></i> <a href="mailto:{{author.email}}">{{author.email}}</a></p>
						<p>{{author.bio}}</p>
					</div>
				</div>

				{{! Display post tags }}
				{{#if tags}}<p class="post-tags"><i class="fa fa-tags"></i> {{tags}}</p>{{/if}}
			
				{{! Share post on Twitter, Facebook and Google+ }}
				<p class="post-share">
					Share this:
					<a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
						<i class="fa fa-twitter"></i>
					</a>
					<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
						<i class="fa fa-facebook"></i>
					</a>
					<a href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
						<i class="fa fa-google-plus"></i>
					</a>
				</p>
			</footer>
		</article><!-- .post -->		

	{{/post}}

</div><!-- .site-content -->